@model TrackingApp.Models.System_Track

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-header">
            <strong>Create track</strong>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
        <div class="card-body card-block">
            <form class="form-horizontal">

                <div class="row form-group">
                    <div class="col col-md-3">
                        <i class="fa fa-file-text-o"></i>
                        <label for="select" class=" form-control-label">Select form</label>
                    </div>
                    <div class="col-12 col-md-9">
                        @Html.DropDownList("Form_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Form_id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <i class="fa fa-dot-circle-o"></i>
                        <label for="select" class=" form-control-label">Select status</label>
                    </div>
                    <div class="col-12 col-md-9">
                        @Html.DropDownList("Status_track_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Status_track_id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <i class="fa fa-bars"></i>
                        <label for="text-input" class=" form-control-label">Track title</label>
                    </div>
                    <div class="col-12 col-md-9">
                        @Html.EditorFor(model => model.Track_title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Track_title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <i class="fa fa-bookmark"></i>
                        <label for="textarea-input" class=" form-control-label">Track remark</label>
                    </div>
                    <div class="col-12 col-md-9">
                        @Html.TextAreaFor(model => model.Track_remark, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Track_remark, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.TextBox("Track_date", DateTime.Now.ToShortDateString(), new { @type = "hidden" })
                        @Html.ValidationMessageFor(model => model.Track_date, "", new { @class = "text-danger" })
                    </div>
                </div>
            </form>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary btn-sm">
                <i class="fa fa-dot-circle-o"></i> Submit
            </button>
            <button type="reset" class="btn btn-danger btn-sm">
                <i class="fa fa-ban"></i> Reset
            </button>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

