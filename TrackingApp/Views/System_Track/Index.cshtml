@model IEnumerable<TrackingApp.Models.System_Track>

@{
    ViewBag.Title = "Index";
}

<header>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/normalize.css@8.0.0/normalize.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lykmapipo/themify-icons@0.1.2/css/themify-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pixeden-stroke-7-icon@1.2.3/pe-icon-7-stroke/dist/pe-icon-7-stroke.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.2.0/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/assets/css/cs-skin-elastic.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link href="~/assets/css/lib/datatable/dataTables.bootstrap.min.css" rel="stylesheet" />

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>
</header>
<div class="content">
    @if (User.IsInRole("User")) { 
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    }
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Data Table</strong>
                    </div>
                    <div class="card-body">
                        <div id="bootstrap-data-table_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
                            <div class="col-sm-12">
                                <table id="bootstrap-data-table" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="bootstrap-data-table_info">
                                    <thead>
                                        <tr role="row">
                                            @if (User.IsInRole("Admin"))
                                            {
                                            <th class="sorting_asc" tabindex="0" aria-controls="bootstrap-data-table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 111px;">@Html.DisplayNameFor(model => model.System_Form.System_User.User_name)</th> }
                                        <th class="sorting_asc" tabindex="0" aria-controls="bootstrap-data-table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 111px;">@Html.DisplayNameFor(model => model.System_Form.Form_title)</th><th class="sorting" tabindex="0" aria-controls="bootstrap-data-table" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 313px;">@Html.DisplayNameFor(model => model.System_Status_Track.Status_track_name)</th><th class="sorting" tabindex="0" aria-controls="bootstrap-data-table" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 390px;">@Html.DisplayNameFor(model => model.Track_remark)</th><th class="sorting" tabindex="0" aria-controls="bootstrap-data-table" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 111px;">@Html.DisplayNameFor(model => model.Track_title)</th><th class="sorting" tabindex="0" aria-controls="bootstrap-data-table" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 300px;">@Html.DisplayNameFor(model => model.Track_date)</th>
                                       @if (User.IsInRole("User"))
                                       { <th></th>}
                                        </tr>
                                    </thead>

                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <td>
                                                @Html.DisplayFor(modelItem => item.System_Form.System_User.User_name)
                                            </td>
                                        }
                                        <td>
                                            @Html.DisplayFor(modelItem => item.System_Form.Form_title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.System_Status_Track.Status_track_name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Track_remark)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Track_title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Track_date)
                                        </td>
                                        @if (User.IsInRole("User"))
                                        {
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.Track_id }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.Track_id }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.Track_id })
                                            </td>
                                        }
                                    </tr>
                                    }

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>
