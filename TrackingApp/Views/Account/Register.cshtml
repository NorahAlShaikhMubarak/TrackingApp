@model TrackingApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Tracking System</title>
    <meta name="description" content="Tracking System">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="https://www.gpstrackingsystems.com.au/wp-content/uploads/2016/12/icon-GPS.png">
    <link rel="shortcut icon" href="https://www.gpstrackingsystems.com.au/wp-content/uploads/2016/12/icon-GPS.png">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/normalize.css@8.0.0/normalize.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lykmapipo/themify-icons@0.1.2/css/themify-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pixeden-stroke-7-icon@1.2.3/pe-icon-7-stroke/dist/pe-icon-7-stroke.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.2.0/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/assets/css/cs-skin-elastic.css">
    <link rel="stylesheet" href="~/assets/css/style.css">

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>

    <!-- <script type="text/javascript" src="https://cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.min.js"></script> -->
</head>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
<body class="bg-dark">

    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">


                <div class="login-logo">
                    <a href="index.html">
                        <h2><strong>Welcome to Tracking System</strong></h2>
                        @*<img class="align-content" src="~/assets/images/ksauhs2.png" alt="">*@
                    </a>
                </div>
                <div class="login-form">
                    <form>
                        <div class="form-group">
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <i class="fa fa-user"></i>
                            <label>Email address</label>
                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <i class="fa fa-lock"></i>
                            <label>Password</label>
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <i class="fa fa-lock"></i>
                            <label>Confirm Password</label>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <i class="fa fa-user"></i>
                            <label>System users</label>
                            @Html.DropDownList("User_id", (IEnumerable<SelectListItem>)ViewBag.System_User, null, new { @class = "form-control" })
                        </div>


                        <button type="submit" class="btn btn-successes btn-flat m-b-30 m-t-30">Sign in</button>

                        <div class="register-link m-t-15 text-center">
                            <p>Already have account ? @Html.ActionLink("Login here", "Login")</p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
</body>
}



